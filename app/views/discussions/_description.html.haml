.description-container
  .description-body
    - too_long = true if description && description.length > 500

    <!--[if IE 7]>
    .long-description.model-description
      ~ conditional_markdown(description_markdown_setting, description)
    <![endif]-->

    <!--[if !IE 7]><!-->
    .short-description.model-description
      ~ conditional_markdown(description_markdown_setting, truncate(description, length: 500, omission: '...', separator: ' '))
    .long-description.model-description{style: "display: none"}
      ~ conditional_markdown(description_markdown_setting, description)
    = link_to "Show More", "#", class: 'see-more' if too_long
    <!--<![endif]-->

    - if can? :edit_description, discussion
      = link_to "Edit discussion info", "#", class: "edit-description edit-discussion-description", id: 'edit_description'

  - if can? :edit_description, discussion
    = form_tag send("edit_description_discussion_path", discussion), :id => "description-edit-form", :class => "hidden", :remote => true do |f|
      = hidden_field_tag 'id'
      .control-group
        = text_area_tag 'description', description, {id: 'description-input',  :autofocus => true }
        .character-counter
      .save-buttons.clearfix
        = submit_tag "Save", class: 'btn btn-small btn-grey run-validations', id: 'add-description-submit', :data => {:disable_with => "Saving"}
        = link_to "Cancel", "#", id: 'cancel-add-description'
